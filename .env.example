# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
DATABASE_URL=postgres://postgres:yourPassword@localhost:5432/campus

# JWT Configuration
JWT_ACCESS_SECRET=your-super-secret-access-key-change-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Application URLs
APP_BASE_URL=http://localhost:5173
CORS_ORIGIN=http://localhost:5173

# Email Configuration (SMTP)
# Gmail kullanimi icin:
# 1. Google Hesabinizda 2 adimli dogrulamayi etkinlestirin
# 2. Uygulama sifresi olusturun: https://myaccount.google.com/apppasswords
# 3. 16 haneli uygulama sifresini MAIL_PASS olarak ayarlayin
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USER=your-email@gmail.com
MAIL_PASS=your-app-password
MAIL_FROM=your-email@gmail.com

# Cloudinary Configuration (File Upload)
# Profil fotograf ve diger dosya yuklemeleri icin
# Cloudinary hesabi olusturun: https://cloudinary.com
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Payment Gateway Configuration (Optional)
# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# PayTR Configuration
PAYTR_MERCHANT_ID=your_merchant_id
PAYTR_MERCHANT_KEY=your_merchant_key
PAYTR_MERCHANT_SALT=your_merchant_salt